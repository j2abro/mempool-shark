{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true
    "target": "es2020",
    "module": "esnext",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["test", "node_modules"]
}
